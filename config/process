pkg update -y
pkg install wget curl proot tar -y
wget https://raw.githubusercontent.com/allytiago/Ubuntu-no-Android/beta/install.sh -O ubuntu-install.sh
chmod +x ubuntu-install.sh
bash ubuntu-install.sh #In the dialog I choose the "No GUI" option to do a clean installation.  After everything is finished I exit Ubuntu with "exit"
sed -i '\|command+=" -b /proc/self/fd:/dev/fd"|a command+=" -b system_bus_socket:/run/dbus/system_bus_socket"' ./start-ubuntu.sh
rm -rf /data/data/com.termux/files/usr/var/run/dbus/pid
dbus-daemon --fork --config-file=/data/data/com.termux/files/usr/share/dbus-1/system.conf --address=unix:path=system_bus_socket
ls #start-ubuntu.sh storage system_bus_socket ubuntu-install.sh ubuntu22-binds ubuntu22-fs ubuntu22-rootfs.tar.gz
./start-ubuntu.sh
ls /run/dbus/system_bus_socket #/run/dbus/system_bus_socket
sudo apt-get install sudo wget nano dialog inetutils-tools dbus-x11 -y 
sudo apt-get install exo-utils --no-install-recommends -y
sudo apt-get install tigervnc-standalone-server tigervnc-common tigervnc-tools --no-install-recommends -y
sudo apt-get install gnome-shell gnome-terminal gnome-tweaks gnome-shell-extensions gnome-shell-extension-ubuntu-dock -y
sudo apt-get install  yaru-theme-gtk yaru-theme-icon -y
mkdir -p ~/.vnc
echo '#!/bin/bash' >> ~/.vnc/xstartup
echo 'gnome-shell --x11' >> ~/.vnc/xstartup
#export XDG_CURRENT_DESKTOP="GNOME"
#service dbus start
#gnome-shell --x11
#ctrl+x y enter
chmod +x ~/.vnc/xstartup
echo "export DISPLAY=":1"" >> /etc/profile
source /etc/profile

vncpasswd
vncserver -name remote-desktop -geometry 1920x1080 :1